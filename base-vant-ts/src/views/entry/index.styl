.page-wrap
  background $background-main
  .entry-main
    height 100%
    background url('/static/images/entry/microEnterpriseBg.png') bottom no-repeat
    .entry-content
      position absolute
      top 40%
      left 50%
      transform translate(-50%, -60%)
      width 80%
      text-align center
      font-family osFont
      .entry-title
        color $white
        font-size 28px
      .operation-btn
        margin 24px 0 0 0
        display flex
        flex-direction column
        .custom-primary-btn
          margin 12px 0
          padding 32px 15px
          background linear-gradient(180deg, #FFFFFF, #EAEEFA)
          border 1px solid #EAEEFA
          border-radius 8px
          color $primary
          :deep(.van-button__content)
            .van-button__text
              display flex
              align-items center
              &>img
                width 32px
                padding 0 12px 0 0
              &>span
                font-size 18px
