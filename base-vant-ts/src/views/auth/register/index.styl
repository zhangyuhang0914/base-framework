.page-wrap
  background $background-default
  .main-box
    position relative
    height 100%
    background url('/static/images/login/mainBg.png') top center no-repeat
    .suspend-view
      position absolute
      left 50%
      transform translate(-50%, 35%)
      width 90%
      height auto
      padding 18px
      background #FFFFFF
      border-radius 8px
      box-sizing border-box
      display flex
      flex-direction column
      align-items center
      overflow-x hidden
      overflow-y auto
      .micro-dialog__title
        color $primary
        font-size 22px
      .micro-dialog__sub-title
        padding 6px 0 12px 0
        color $tips
        font-size 12px
      .custom-register-wrap
        width 100%
