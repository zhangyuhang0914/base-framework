.enterprise-info-wrap
  height 100%
  .scroll-view
    height 100%
    display flex
    flex-direction column
    .banner-wrap
      position relative
      height 24%
      .name
        position absolute
        top 50%
        left 50%
        transform translate(-70%, -60%)
        font-size 60rpx
        font-weight bold
        background linear-gradient(180deg, #FFFDFA, #FFDFB6)
        background-clip text
        -webkit-background-clip text
        -webkit-text-fill-color transparent
        text-align center
        white-space nowrap
        text-shadow 2rpx #173fab
    .c-content-box
      height 76%
      .c-content
        position relative
        bottom 48rpx
        height auto
        padding 0 24rpx 48rpx 24rpx
        margin 0 36rpx 36rpx 36rpx
        background #FFFFFF
        border-radius 12rpx
        border 2rpx solid #D0DFF3
        box-shadow 0 5rpx 20rpx 0 #00000014
        .c-common-header
          display flex
          align-items center
          justify-content center
          .c-img
            flex none
            width 12%
          .title
            padding 36rpx 24rpx
            color #3C406C
            font-size 42rpx
            font-weight bold
            white-space pre-wrap
        .company-text
          padding 0 0 24rpx 0
        .custom-title
          padding 24rpx 0 12rpx 0
        .c-address-info
          padding 24rpx 0
          display flex
          flex-direction column
          justify-content center
          .c-address-item
            padding 35rpx
            margin 0 0 36rpx 0
            background #F3F7FA
            border-radius 14rpx
            border 2rpx solid #E5ECF1
            display flex
            flex-direction column
            .c-item-title
              color #434658
              font-size 31rpx
              font-weight bold
            .c-address-wrap
              flex 1
              padding 21rpx 0 0 0
              line-height 52rpx
              display flex
              flex-direction column
              justify-content space-around
              .c-content-item-box
                display flex
                align-items center
                .c-icon
                  flex none
                  width 5%
                .c-content-item-text
                  padding 0 0 0 21rpx
                  font-size 24rpx
::v-deep .richContent
  rich-text, text
    text-indent 2em
    line-height 54rpx
    font-size 28rpx
    font-weight 500