.layoutMain
  padding-top 0
  background-color #ffffff
  position relative
  .scrollView
    height 100%
    box-sizing border-box
    .banner-wrap
      position relative
      height 30%
      .tips
        position absolute
        top 41%
        left 62rpx
        width 57%
        color #ffffff
        line-height 42rpx
        transform translateY(-50% + 20rpx)
    .mainContainer
      height auto
      .centerMain
        position relative
        bottom 48rpx
        padding 24rpx 24rpx 48rpx 24rpx
        margin 0 36rpx 36rpx 36rpx
        background #FFFFFF
        border-radius 12rpx
        border 2rpx solid #D0DFF3
        box-shadow 0 5rpx 20rpx 0 $box-shadow-main
        view
          color #909399
        .c-header
          display flex
          align-items center
          .c-title-box
            .title
              font-weight bold
              font-size 40rpx
              color #333
            .subTitle
              font-weight bold
              color #333
              line-height 45rpx
              white-space pre-wrap
          .product-logo
            flex none
            width 35%
        .u-primary
          :deep(.u-button)
            margin 40rpx 0
            height 100rpx
            font-size 34rpx
            .iconfont
              margin-right 10rpx
        .iconTitle
          font-weight bold
          color #333
          .iconfont
            color #2C5182
            margin-right 10rpx
        .line
          margin 20rpx 0 30rpx 0
          border-bottom 2rpx dashed $box-shadow-main
