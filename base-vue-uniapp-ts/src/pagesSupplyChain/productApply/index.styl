.layoutMain
  padding-top 0
  background-color #ffffff
  position relative
  .scrollView
    height 100%
    box-sizing border-box
    .banner-wrap
      position relative
      height 30%
      .tips
        position absolute
        top 41%
        left 62rpx
        width 57%
        color #ffffff
        line-height 42rpx
        transform translateY(-50% + 20rpx)
    .mainContainer
      height auto
      .centerMain
        position relative
        bottom 48rpx
        padding 24rpx 24rpx 48rpx 24rpx
        margin 0 36rpx 36rpx 36rpx
        background #FFFFFF
        border-radius 12rpx
        border 2rpx solid #D0DFF3
        box-shadow 0 5rpx 20rpx 0 $box-shadow-main
        .title
          font-weight bold
          font-size 40rpx
          color #333
