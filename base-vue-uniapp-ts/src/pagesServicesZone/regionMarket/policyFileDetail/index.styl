.layoutMain
  .mainContainer
    .content
      padding 40rpx
    .doctitle
      font-size 40rpx
      font-weight 600
    .timeBox
      color #909399
      margin-top 10rpx
      .publisher
        margin-left 20rpx
    .fontSizeBox
      display flex
      align-items center
      margin-top 10rpx
      .btnGroup
        display flex
        margin-left 20rpx
        .btn
          padding 0 10rpx
          min-width 50rpx
          text-align center
          border 2rpx solid #CCCCCC
          border-left none
          &:first-child
            border-left 2rpx solid #CCCCCC
            border-radius 8rpx 0 0 8rpx
          &:last-child
            border-radius 0 8rpx 8rpx 0
          &.active
            background-color $background-main
            color #ffffff
            border-color $background-main
            box-shadow -1px 0 0 0 $background-main
    .large
      font-size 18px
    .normal
      font-size 14px
    .mini
      font-size 12px
    .line
      width 100%
      height 2rpx
      background-color #E6E6E6
      margin 40rpx 0 20rpx 0

