// - 变量、插件、函数
@import './uview.styl'
@import './uni.styl'
@import './iconfont.styl'
.page-view
  width 100%
  height 100%
  margin 0 auto
  display flex
  flex-direction column
  overflow hidden
  color $text
layout
  height 100%
view
  color $text
// 输入框
input
  padding 0 18rpx
textarea
  padding 0 18rpx
.flex
  display flex
  flex-direction row
.flex-column
  display flex
  flex-direction column
.flex-center
  display flex
  align-items center
  justify-content center
.larger-btn
  .u-button
    height 92rpx !important
    margin 24rpx 0 !important
    font-size 32rpx !important
    font-weight bold
.close-btn
  .u-button
    color #858585 !important
    border 2rpx solid #d7dae2 !important
    background-color #f1f1f1 !important
.formItemH50
  min-height 50px
  display flex
  align-items center
// 首页产品头部模板
.custom-product-header
  width 100%
  height 86rpx
  padding 12rpx 24rpx 24rpx 36rpx
  box-sizing border-box
  display flex
  justify-content space-between
  align-items center
  .c-handle-box
    display flex
    align-items center
    justify-content center
    .c-title
      font-size 32rpx
      font-weight bold
    .icon-remen
      padding 0 12rpx
      background-image $active-tab-icon
      -webkit-background-clip text
      color transparent
      font-size 24rpx
  .c-more
    display flex
    align-items center
    justify-content space-between
    .more
      color $text-tips
      font-size 26rpx
    .icon-right
      padding 0 0 0 4rpx
// 通用按钮
.pinia-btn
  margin-right 24rpx
  background $info-btn
  .iconfont
    color $text-main
  .value
    padding 0 12rpx
    color $text-main
.info-btn
  margin-right 24rpx
  background #F1F1F1
  .iconfont
    color #858585
  .value
    padding 0 12rpx
    color #858585
.primary-btn
  margin 0 !important
  background $primary-btn
  .iconfont
    color $white
  .value
    padding 0 12rpx
    color $white
// 产品详情
.product-box
  width 100%
  height 100%
  padding 28rpx 48rpx 36rpx 36rpx
  background #FFFFFF
  border 2rpx solid $info-btn
  box-shadow 0 6rpx 18rpx 0 $box-shadow-main
  box-sizing border-box
  border-radius 20rpx
  display flex
  flex-direction column
  justify-content space-around
  .product-tips
    position absolute
    top -4rpx
    right -4rpx
    max-width 70%
    height 38rpx
    display flex
    align-items center
    padding 12rpx 16rpx
    border-radius 0 12rpx
    image-rendering -moz-crisp-edges
    image-rendering -o-crisp-edges
    image-rendering -webkit-optimize-contrast
    image-rendering crisp-edges
    -ms-interpolation-mode nearest-neighbor
    .title
      padding 0 4rpx 8rpx 4rpx
      color $info-tips
      font-size 24rpx
      line-height 28rpx
      display -webkit-box
      -webkit-box-orient vertical
      -webkit-line-clamp 2
      overflow hidden
  .product-header
    display flex
    align-items center
    .img-logo
      flex none
      width 154rpx
      height 90rpx
      padding 6rpx 12rpx
      border 2rpx solid #DCDCDC
      display flex
      align-items center
      justify-content center
      & > image
        width 100%
        background-repeat no-repeat
        background-size 100% 100%
    .product-title
      padding 0 0 0 24rpx
      line-height 52rpx
      .name
        font-size 32rpx
        font-weight bold
      .source
        font-size 22rpx
        font-weight bold
        display -webkit-box
        -webkit-box-orient vertical
        -webkit-line-clamp 1
        overflow hidden
  .product-content
    padding 24rpx 0 12rpx 0
    .product-data
      padding 12rpx 0
      display flex
      align-items center
      justify-content space-between
      .c-column
        line-height 48rpx
        justify-content center
        align-items center
        .value
          font-size 28rpx
          font-weight bold
          display -webkit-box
          -webkit-box-orient vertical
          -webkit-line-clamp 1
          overflow hidden
        .label
          color #909399
          font-size 24rpx
      .rate-range-box
        .value
          color $danger
      .loan-limit-box
        .value
          color $text-main
      .loan-period-box
        .value
          color $text-main
  .product-footer
    display flex
    justify-content space-between
    align-items center
    .guarantee-mode-left
      background $info-btn
      .mode-value
        padding 13rpx 16rpx
        color $text-main
        font-size 24rpx
    .operation-box-right
      width 50%
      display flex
      align-items center
      justify-content flex-end
      .operation-box
        display flex
        align-items center
        justify-content center
      .collection-btn
        width 60rpx
        height 60rpx
        margin-right 36rpx
        border-radius 50%
        background linear-gradient(270deg, #7F8AA8, #10264D)
        .iconfont
          position relative
          left 1px
          bottom 1px
          font-size 28rpx
          color transparent
          background-image $active-tab-icon
          -webkit-background-clip text
      .apply-btn
        width 60rpx
        height 60rpx
        margin-right 36rpx
        border-radius 50%
        background $info-btn
        .iconfont
          position relative
          left 1px
          bottom 1px
          font-size 28rpx
          color #4D5775
      .compare-btn
        width 60rpx
        height 60rpx
        border-radius 50%
        background $info-btn
        .iconfont
          position relative
          left 1px
          bottom 1px
          font-size 28rpx
          color #4D5775
// 轮播指示面板
.indicator
  position absolute
  left 0
  right 0
  bottom 42rpx
  display flex
  justify-content center
  .dot
    width 10rpx
    height 12rpx
    margin 0 8rpx
    border-radius 12rpx
    background #E8E8E8
  .active
    width 32rpx !important
    background #4C5F99 !important
// 图片
image
  width 100%
  height auto
  image-rendering -moz-crisp-edges
  image-rendering -o-crisp-edges
  image-rendering -webkit-optimize-contrast
  image-rendering crisp-edges
  -ms-interpolation-mode nearest-neighbor
// 隐藏滚动条
/deep/ .hidden-scroll::-webkit-scrollbar
  display none !important
  width 0 !important
/deep/ .u-tabs__wrapper__nav::-webkit-scrollbar
  display none !important
  width 0 !important
// 全局滚动条显示
/deep/ ::-webkit-scrollbar
  display block !important
  width 10rpx !important
  height 10rpx !important
  background-color rgba(0, 0, 0, 0) !important
/* 定义滚动条轨道 内阴影+圆角 */
/deep/ ::-webkit-scrollbar-track
  border-radius 20rpx !important
  background-color rgba(0, 0, 0, 0) !important
/* 定义滑块 内阴影+圆角 */
/deep/ ::-webkit-scrollbar-thumb
  border-radius 20rpx !important
  background-color #bbb !important
// 显示一行多出来的省略
.text-line1-overflow
  white-space nowrap
  overflow hidden
  text-overflow ellipsis
// 显示两行多出来的省略
.text-line2-overflow
  overflow hidden
  text-overflow ellipsis
  display -webkit-box
  -webkit-line-clamp 2
  line-clamp 2
  -webkit-box-orient vertical
.layoutMain
  background-color $background-main
  height 100%
  padding-top 20rpx
  box-sizing border-box
  .mainContainer
    background-color #ffffff
    height 100%
    border-radius 30rpx 30rpx 0px 0px
    box-sizing border-box
