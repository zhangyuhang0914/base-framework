.layoutMain
  padding-top 120rpx
  line-height 18px
  .mainContainer
    padding 0 25rpx
    .userMain
      height calc(100% + 100rpx)
      background-color #FFFFFF
      border-left 2rpx solid #D5E6F6
      border-right 2rpx solid #D5E6F6
      box-shadow 0 0 13px 0 #4285f61c
      border-radius 12rpx 12rpx 0 0
      position relative
      top -100rpx
    .scrollView
      height 100%
      .topUserInfo
        border-radius 12rpx 12rpx 0 0
        padding 40rpx
        background-size 100% 100%
        up-row.rowBox
          :deep(.u-row)
            width auto
        .userInfo
          display flex
          align-items center
          view
            color #FFFFFF
          .userImg
            width 100rpx
            height 100rpx
            margin 0
            padding 0
            border none
            margin-right 30rpx
            border-radius 12rpx
            background-color transparent
            .img
              width 100%
              height 100%
              border-radius 12rpx
            &.weidelutouxiang
              background-color #DAECFE
              text-align center
              line-height 100rpx
              .iconfont
                color #1975F1
                font-size 70rpx
            &.noAvatarUrl
              background-color rgba(0, 0, 0, 0.2)
              display flex
              align-items center
              padding 0px 5rpx
              .notice
                font-size 20rpx
                line-height 28rpx
                color #f3f2f2
          .userName
            font-size 32rpx
          .enterpriseName
            font-size 24rpx
            margin-top 10rpx
          .loginBtn
            font-size 35rpx
        .totalCount
          border-radius 20rpx 20rpx 20rpx 20rpx
          background #ffffff
          box-shadow 0 0 13rpx 0 #4285f61c
          line-height 42rpx
          padding 20rpx
          display flex
          flex-direction column
          align-items flex-start
          justify-content space-between
          margin-top 40rpx
          .totalName
            color #909399
          .totalInfo
            display flex
            .applyCotunt
              color #F3841F
            .applyUnit
              position relative
              top 2rpx
              padding 0 8rpx
              color #f3841f
              font-size 24rpx
            .financeCount
              color #0085FF
            .financeUnit
              position relative
              top 2rpx
              padding 0 8rpx
              color #0085FF
              font-size 24rpx
      .cellGroup
        padding 0 50rpx 50rpx 50rpx
        :deep(.u-cell__body)
          padding-left 0
          padding-right 0
          .u-cell__value
            font-size 12px
            color #909399
          .iconfont
            background-image linear-gradient(0deg, #51acff, #397cfb)
            -webkit-background-clip text
            color transparent
            margin-right 21rpx
