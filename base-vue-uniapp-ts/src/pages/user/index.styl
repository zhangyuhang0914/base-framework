.layoutMain
  padding-top 120rpx
  line-height 18px
  .mainContainer
    padding 0 25rpx
    .userMain
      height calc(100% + 100rpx)
      background-color #FFFFFF
      border-left 2rpx solid #EAEEFA
      border-right 2rpx solid #EAEEFA
      box-shadow 0 0 13px 0 rgba(66, 133, 246, 0.11)
      border-radius 12rpx 12rpx 0 0
      position relative
      top -100rpx
    .scrollView
      height 100%
      .topUserInfo
        border-radius 12rpx 12rpx 0 0
        padding 40rpx
        background linear-gradient(180deg, #FFFFFF, #EAEEFA)
        up-row.rowBox
          :deep(.u-row)
            width auto
        .userInfo
          display flex
          align-items center
          .userImg
            width 100rpx
            height 100rpx
            margin 0
            padding 0
            border none
            margin-right 30rpx
            border-radius 12rpx
            background-color transparent
            .img
              width 100%
              height 100%
              border-radius 12rpx
            &.weidelutouxiang
              background-color #F1F1F1
              text-align center
              line-height 100rpx
              .iconfont
                background-image $default-tab-icon
                -webkit-background-clip text
                color transparent
                font-size 70rpx
            &.noAvatarUrl
              background-color rgba(0, 0, 0, 0.2)
              display flex
              align-items center
              padding 0px 5rpx
              .notice
                font-size 20rpx
                line-height 28rpx
                color #f3f2f2
          .userName
            font-size 32rpx
            color $header-title-text
          .enterpriseName
            margin-top 10rpx
            font-size 24rpx
            color $header-title-text
          .loginBtn
            font-size 35rpx
        .totalCount
          border-radius 20rpx 20rpx 20rpx 20rpx
          background linear-gradient(135deg, #132B5B 0%, #5B6B8A 100%)
          box-shadow 0 0 13rpx 0 #4285f61c
          line-height 42rpx
          padding 20rpx
          display flex
          flex-direction column
          align-items flex-start
          justify-content space-between
          margin-top 40rpx
          .totalName
            color #ffffff
          .totalInfo
            display flex
            .applyCotunt
              color #FCE18C
            .applyUnit
              position relative
              top 2rpx
              padding 0 8rpx
              color #ffffff
              font-size 24rpx
            .financeCount
              color #FCE18C
            .financeUnit
              position relative
              top 2rpx
              padding 0 8rpx
              color #ffffff
              font-size 24rpx
      .cellGroup
        padding 0 0 50rpx 0
        :deep(.u-cell-group__wrapper)
          line-height 60rpx
          .u-cell
            padding 0 50rpx
            .u-cell__body
              padding-left 0
              padding-right 0
              .u-cell__value
                font-size 12px
                color #909399
              .iconfont
                background-image linear-gradient(0deg, #132B5B, #233E73)
                -webkit-background-clip text
                color transparent
                margin-right 21rpx
