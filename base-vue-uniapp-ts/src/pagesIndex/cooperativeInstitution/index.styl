.finance-institution
  height 100%
  background-color $background-main
  display flex
  flex-direction column
  .institution-filter-wrap
    padding 24rpx 48rpx 48rpx 48rpx
    .filter-main
      display flex
      align-items center
      justify-content space-between
      .txt
        color #909399
        font-size 24rpx
      .operation-btn
        display flex
        .expand-filter
          padding 4rpx 28rpx 4rpx 32rpx
          margin 0 12rpx 0 0
          border 2rpx solid #DAE1ED
          background-color #FFFFFF
          border-radius 36rpx
          display flex
          align-items center
          justify-content center
          .txt
            color $text-main
            font-weight bold
            font-size 30rpx
          /deep/ .u-icon
            .u-icon__icon
              padding 0 0 0 12rpx
              color $text-main !important
              font-size 30rpx !important
              font-weight bold !important
        .close-filter
          padding 4rpx 32rpx
          background-color #FFFFFF
          border-radius 36rpx
          display flex
          align-items center
          justify-content center
          .txt
            color #88929E
            font-weight bold
            font-size 30rpx
  .institution-scroll-content
    height calc(100% - 36rpx - 90rpx - 120rpx)
    padding 36rpx 0 0 0
    border-radius 24rpx 24rpx 0 0
    background-color #FFFFFF
    .scroll-view
      height 100%
      .scroll-box
        height 100%
        padding 0 24rpx
        .scroll-item
          padding 36rpx
          margin 0 0 36rpx 0
          border 2rpx solid $info-btn
          border-radius 12rpx
          box-shadow 0 6rpx 18rpx 0 $box-shadow-main
          box-sizing border-box
          line-height 40rpx
          .institution-box
            display flex
            flex-direction column
            .product-header
              display flex
              align-items center
              .product-logo
                width 220rpx
                height 90rpx
                padding 6rpx 12rpx
                border 2rpx solid #F0F0F0
                border-radius 12rpx
                background-color #FFFFFF
                display flex
                align-items center
                justify-content center
                & > image
                  width 100%
              .product-name
                padding 0 36rpx
                font-size 36rpx
                font-weight 500
            .product-info
              padding 12rpx 0 0 0
              display flex
              justify-content space-between
              .institution-info
                flex 1
                display flex
                align-items center
                justify-content space-between
                .info
                  width 100%
                  display flex
                  align-items center
                  justify-content flex-start
                  .iconfont
                    color $text-main
                    font-size 24rpx
                  .txt
                    color #909399
                    font-size 24rpx
                    padding 0 12rpx
                  .value
                    color $header-title-text
                    font-size 30rpx
                    font-weight bold
            .product-operation
              /deep/ .u-button
                height 50rpx
                padding 28rpx
                border-radius 4rpx
      .no-data-view
        padding 50rpx
    .filter-popup
      /deep/ .u-popup
        .u-transition
          height 75%
          .u-popup__content
            height 100%
            background linear-gradient(180deg, #EAEEFA 0%, #FFFFFF 60%)
            .popup-header
              position relative
              padding 12rpx 0
              display flex
              align-items center
              justify-content center
              .title
                font-size 36rpx
                font-weight bold
              .popup-close
                position absolute
                right 32rpx
                background #EBF5FF
                padding 6rpx
                border-radius 50%
                display flex
                align-items center
                justify-content center
                /deep/ .u-icon
                  .u-icon__icon
                    color #CCCCCC !important
                    font-size 24rpx !important
            .popup-content
              /* 减去按钮高度 + 底部安全距离 */
              height calc(100% - 140rpx - 34rpx - 84rpx)
              .scroll-view
                padding 24rpx 36rpx
                box-sizing border-box
                .tips-title
                  display flex
                  justify-content space-between
                  .txt
                    color #909399
                    font-size 30rpx
                    font-weight bold
                  .open
                    display flex
                    align-items center
                    .show-txt
                      color $text-main
                    .u-icon
                      .u-icon__icon
                        padding 0 24rpx 0 8rpx
                        color $text-main !important
                .form-check
                  padding 0 0 24rpx 0
                  display flex
                  flex-wrap wrap
                  align-items center
                  .value-item
                    width 30%
                    border 2rpx solid #D7DAE2
                    background-color #FFFFFF
                    border-radius 88rpx
                    text-align center
                    margin 28rpx 16rpx 0 0
                  .is-active
                    color $text-main
                    border 2rpx solid $primary
                    background $info-btn
                  .auto-width
                    width 47%
                .is-hide
                  height 475rpx
                  overflow hidden
            .popup-footer
              width 100%
              height 140rpx
              padding 0 24rpx
              display flex
              justify-content space-between
              align-items center
              box-sizing border-box
              .reset-btn
                width 48%
                .u-button
                  color #858585
                  border 2rpx solid #D7DAE2
                  background #f1f1f1
              .confirm-btn
                width 48%
                .u-button
                  color #FFFFFF
                  border 2rpx solid #D7DAE2
                  background #1975f1