:root
  --el-font-size-base $font-size-base !important
.el-button
  border none !important
.el-button--primary
  background $button-primary
.el-tabs--card
  &>.el-tabs__header
    border-bottom 5px solid #7AC1FF !important
    .el-tabs__nav
      width 100%
      .el-tabs__item
        flex 1
        &.is-active
          background-color $theme-color
          border-bottom-color $theme-color
          color #FFFFFF
.camera-dialog
  top 50%
  transform translateY(-50%)
  margin 0 auto 50px !important
  border-radius 12px
  .el-dialog__header
    display none
    .c-title
      text-align center
      font-weight bold
      font-size 22px
      color #333333
  .el-dialog__body
    padding 0
    #scan-container
      width 100%
      height 453px !important
  .el-dialog__footer
    display flex
    align-items center
    justify-content center
    padding 12px !important
