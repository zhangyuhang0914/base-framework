.setting-box
  width 100%
  height 100%
  background-image url('images/common/home-bg.png')
  background-position center
  background-size 100% 108%
  background-repeat no-repeat
  .system-setting
    width 94%
    height 94%
    margin auto
    display flex
    align-items center
    flex-direction column
    background #fff
    border-radius 16px
    position relative
    top 3%
    .setting-name
      width 100%
      height 50px
      background $background
      display flex
      align-items center
      justify-content center
      font-weight bold
      font-size 22px
      color #FFFFFF
      border-radius 16px 16px 0 0
    :deep(.el-form)
      margin auto
      .el-row
        .el-col
          .show-code
            width 36px
            height 36px
            background linear-gradient(270deg, #36a4ff, #7ac1ff)
            display flex
            align-items center
            justify-content center
            border-radius 50%
            cursor pointer
            & > img
              width 55%
              height 55%
              background-size 100% 100%
              background-repeat no-repeat
              background-position center
          .el-button--large
            padding 8px 15px !important
          .el-form-item
            .el-form-item__content
              .el-select
                width 100%
              .terminal-info
                display flex
                flex-direction column
                border-radius 6px
                background #DEF0FF
                margin-right 12px
                padding 0 8px
          .opeartion-footer
            display flex
            align-items center
            justify-content center
        .terminal
          padding-right 0 !important
