.login-wrap
  height 100%
  display flex
  align-items center
  overflow hidden
  position relative
  .containerBox
    .content
      display flex
      align-items center
      justify-content space-around
      .login-box
        display flex
        flex-direction column
        align-items center
        justify-content center
        border-radius 12px
        border 2px solid #D6DCE1
        cursor pointer
        .show-image
          display flex
          align-items center
          justify-content center
          padding 20px 0
          & > img
            width 80%
        .title-box
          width 100%
          height 57px
          border-radius 0 0 12px 12px
          display flex
          align-items center
          justify-content center
          font-weight bold
          font-size larger
          color #FFFFFF
          background #36A4FF
  .test-inlet
    position absolute
    top 0
    right 0
    width 50px
    height 50px
    background transparent
