.test-wrap
  height 100%
  display flex
  align-items center
  overflow hidden
  position relative
  .containerBox
    .content
      display flex
      align-items center
      justify-content space-around
      .test-box
        width 40%
        border-radius 12px
        cursor pointer
        .user-header
          height 120px
          display flex
          align-items center
          justify-content center
          & > img
            height 55%
            padding 0 12px
          & > span
            font-size 22px
            color #FFF
            padding 0 12px
        .user-info
          width 102%
          height 265px
          background url('/images/test/card-bg.png')
          background-size 101% 100%
          background-repeat no-repeat
          position relative
          bottom 10px
          display flex
          flex-wrap wrap
          justify-content flex-start
          padding-left 35px
          box-sizing border-box
          position relative
          right 5px
          .item-value
            width 50%
            display flex
            align-items center
            .label
              color #36A4FF
          .card-value
            display flex
            .label
              color #36A4FF
      .test-user
        .user-header
          background url('/images/test/user-bg.png')
          background-size 100% 100%
          background-repeat no-repeat
      .test-enterprise
        .user-header
          background url('/images/test/enterprise-bg.png')
          background-size 100% 100%
          background-repeat no-repeat
