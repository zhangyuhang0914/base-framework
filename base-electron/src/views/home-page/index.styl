.home-page-wrap
  width 100%
  height 100%
  overflow-y auto
  display flex
  flex-direction column
  align-items center
  justify-content space-around
  .service-block
    margin-top 4%
  .handle-matter-block
    margin-bottom 4%
  .c-scroll-block
    width 92%
    height 38%
    display flex
    flex-direction column
    padding 0 40px
    box-sizing border-box
    background url('images/home/block-bg.png')
    background-repeat no-repeat
    background-size 100% 100%
    .c-title
      height 30%
      color #333333
      display flex
      align-items center
      font-size 22px
      font-weight bold
    .scroll-item-list
      flex 1
      width 100%
      display flex
      align-items center
      box-sizing border-box
      position relative
      bottom 18px
      overflow-x auto
      .c-item-service
        // width calc(100% / 4 - 50px)
        width 25%
        height 65%
        display flex
        align-items center
        margin 0 20px
        background url('images/home/item-bg.png')
        background-repeat no-repeat
        background-size 100% 100%
        cursor pointer
        & > img
          // width 70px
          height 86px
          padding 0 32px 0 40px
          position relative
          top 8px
        & > span
          font-size 22px
          font-weight bold
      .c-item-service:first-child
        margin-left 0
      .c-item-service:last-child
        margin-right 0
