.layout-wrap
  width 100%
  height 100%
  display flex
  flex-direction column
  .layout-top
    flex 0
    -webkit-user-select none
    -moz-user-select none
    user-select none
  .layout-content
    flex 1
    display flex
    overflow hidden
  .layout-footer
    flex 0
    -webkit-user-select none
    -moz-user-select none
    user-select none
