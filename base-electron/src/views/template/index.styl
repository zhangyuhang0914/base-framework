.layout-wrap
  width 100%
  height 100%
  background-image url('images/common/home-bg.png')
  background-position center
  background-size 100% 108%
  background-repeat no-repeat
  .layout-top
    height 72px
    -webkit-user-select none
    -moz-user-select none
    user-select none
  .layout-content
    height calc(100% - 144px)
    overflow auto
  .layout-footer
    height 72px
    -webkit-user-select none
    -moz-user-select none
    user-select none
