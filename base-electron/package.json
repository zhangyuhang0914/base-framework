{
  "name": "self-service-machine",
  "description": "襄阳交通自助服务一体化",
  "private": true,
  "version": "1.0.0",
  "type": "commonjs",
  "main": "dist-electron/main.js",
  "scripts": {
    "serve": "chcp 65001 && vite --mode devlopment",
    "build": "vite build && electron-builder --mode production",
    "preview": "vite preview",
    "prettier": "prettier --write ."
  },
  "build": {
    "appId": "self-service-machine",
    "productName": "self-service-machine",
    "asar": true,
    "copyright": "jr-soft © 2023 self-service-machine",
    "directories": {
      "output": "dist-electron"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "自助机"
    },
    "win": {
      "icon": "",
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32",
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "artifactName": "${productName}_${version}.${ext}"
    },
    "linux": {}
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.1.0",
    "axios": "^1.4.0",
    "crypto-js": "^4.1.1",
    "electron": "^25.2.0",
    "electron-builder": "^24.4.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.1.0",
    "element-plus": "^2.3.7",
    "js-cookie": "^3.0.5",
    "moment": "^2.29.4",
    "nprogress": "^0.2.0",
    "pinia": "^2.1.4",
    "pinia-plugin-persist": "^1.0.0",
    "qs": "^6.11.2",
    "simple-keyboard": "^3.6.28",
    "simple-keyboard-layouts": "^3.2.34",
    "vite-plugin-electron": "^0.12.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vue": "^3.2.47",
    "vue-router": "^4.2.3"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.22.7",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/eslint-config-prettier": "^7.1.0",
    "autoprefixer": "^10.4.14",
    "babel-eslint": "^10.1.0",
    "eslint": "^8.44.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.15.1",
    "postcss": "^8.4.24",
    "postcss-pxtorem": "^6.0.0",
    "prettier": "^2.8.8",
    "pug": "^3.0.2",
    "stylus": "^0.59.0",
    "unplugin-auto-import": "^0.16.6",
    "unplugin-element-plus": "^0.7.1",
    "unplugin-vue-components": "^0.25.1",
    "vite": "^4.3.9",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-vue-setup-extend": "^0.4.0"
  },
  "eslintIgnore": [
    "node_modules/**/*.js",
    "src/plugin/flexible.js"
  ],
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
