.layout-wrap
  height 100%
  width 100%
  display flex
  flex-direction column
  background $theme
  .layout-top
    -webkit-user-select none
    -webkit-app-region drag
    -moz-user-select none
    user-select none
  & > div
    flex none
    height 54px
  .layout-bottom
    flex 1
    overflow hidden
    display flex
    .layout-left
      flex none
      // width: 54px
      width 62px
    .layout-right
      width calc(100% - 54px)
      border-radius 8px 0 0 0
      background $bg
      position relative
      .network
        position absolute
        color $danger
        width 100%
        left 50%
        background #ffd9df
        width auto
        padding 10px 20px
        border-radius 8px
        font-size 16px
        top 4px
        transform translate(-50%)
        z-index 1000
/* 过度动画 */
.fade-enter-active
  transition all 0.5s ease-out
.fade-leave-active
  transition all 0.2s cubic-bezier(1, 0.5, 0.8, 1)
.fade-enter-from
  transform translateX(20px)
  opacity 0
.fade-leave-to
  transform translateX(-20px)
  opacity 0
